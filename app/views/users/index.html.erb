<!--User Table -->
        <h3>Users </h3>
        <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">User Status</th>
          <th scope="col">Make Admin</th>
          <th scope="col">Delete</th>
          <!--<th scope="col">Location</th>-->
          <!--<th scope="col">Edit</th>-->
        </tr>
      </thead>
      <tbody>
        <% User.all.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <% if user.admin? %>
                <td>Admin</td>
            <% else %>
                <td>Regular User</td>
            <% end %>
            <!--<td><%#= link_to 'Edit', "#" %></td>-->
            <td>
              
              <%= form_for user do |f| %>
                <%= f.label :admin, "No", :value => "false" %>
                <%= f.radio_button :admin, "0" %>
                <%= f.label :admin, "Yes", :value => "true" %>
                <%= f.radio_button :admin, "1" %>
                <%= f.submit "Change Admin status", class: "btn btn-primary" %>
              <% end %>
            <%#= select_tag(:location, options_from_collection_for_select(User.all, :id, :name), selected: :location)%></td>
                <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "You sure?" } %></td>
          </tr>
       
      </tbody>
       <% end %>
    </table>