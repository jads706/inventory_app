<!--Units Borrowed -->
        <h3>Borrowed Units </h3>
        <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">VSU Tag</th>
          <th scope="col">Model</th>
          <th scope="col">Brand</th>
          <th scope="col">Condition</th>
          <th scope="col">Location</th>
          <!--<th scope="col">Edit</th>-->
          <th scope="col">Return</th>
        </tr>
      </thead>
      <tbody>
      <%= will_paginate @units%>
        <% @units.all.each do |unit| %>
          <% if unit.location != "storage" && unit.location == current_user.name %>
          <tr>
            
            <td><%= unit.name_id %></td>
            <td><%= unit.vsu_id %></td>
            <td><%= unit.product_type.model %></td>
            <td><%= unit.product_type.brand %></td>
            <td><%= unit.condition %></td>
            <td><%= unit.location %></td>
            <!--<td><%#= link_to 'Edit', "#" %></td>-->
            
            <td>
              <% if unit.returner == "N/A" %>
                <%= link_to 'Return', returning_unit_path(unit), method: :patch %>
              <% else %>
              Pending for Verification
              <% end %>
            </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @units%>