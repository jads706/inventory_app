<h3>Request for Returns </h3>
        <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">VSU ID</th>
          <th scope="col">Model</th>
          <th scope="col">Brand</th>
          <th scope="col">Condition</th>
          <th scope="col">Location</th>
          <th scope="col">Returner</th>
          <!--<th scope="col">Edit</th>-->
          <th scope="col">Approve</th>
          <th scope="col">Reject</th>
        </tr>
      </thead>
      <tbody>
        <% Unit.all.each do |unit| %>
          <% if unit.returner != "N/A" %>
          <tr>
            <td><%= unit.name_id %></td>
            <td><%= unit.vsu_id %></td>
            <td><%= unit.product_type.model %></td>
            <td><%= unit.product_type.brand %></td>
            <td><%= unit.condition %></td>
            <td><%= unit.location %></td>
            <td><%= unit.returner %></td>
            <!--<td><%#= link_to 'Edit', "#" %></td>-->
            <td><%= link_to 'Approve', approveR_unit_path(unit), method: :patch %></td>
            <td><%= link_to 'Reject', rejectR_unit_path(unit), method: :patch %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>